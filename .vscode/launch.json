{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Launch HomeAssistant",
      "type": "python",
      "request": "launch",
      "program": "/home/vscode/.local/bin/hass",
      "args": [
        "-c",
        "${workspaceFolder}/config",
        "--debug"
      ],
      "env": {
        "PYTHONPATH": "${PYTHONPATH}:${PWD}/custom_components"
      },
      "justMyCode": true
    }
  ]
}